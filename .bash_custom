# http://www.shell-fu.org/lister.php?id=375
function extract() {
    ee() { # echo and execute
        echo "$@"
        $1 "$2"
    }
    for x in "$@"; do
        [[ -f $x ]] || continue
        case "$x" in
            *.tar.bz2 | *.tbz2 )    ee "tar xvjf" "$x"    ;;
            *.tar.gz | *.tgz ) ee "tar xvzf" "$x"    ;;
            *.bz2 )                ee "bunzip2" "$x"    ;;
            *.rar )                ee "unrar x" "$x"   ;;
            *.gz )                ee "gunzip" "$x"    ;;
            *.tar )                ee "tar xvf" "$x"   ;;
            *.zip | *.jar )                ee "unzip" "$x"     ;;
            *.Z )                ee "uncompress" "$x" ;;
            *.7z )                ee "7z x" "$x"      ;;
        esac
    done
}


# .. - Does a 'cd ..'
# .. 3 - Does a 'cd ../../..'
# http://www.shell-fu.org/lister.php?id=550
function .. (){
    local arg=${1:-1};
    while [ $arg -gt 0 ]; do
        cd .. >&/dev/null;
        arg=$(($arg - 1));
    done
}

